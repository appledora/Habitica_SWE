<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/setToFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text6"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/delete_icon"
        android:layout_toRightOf="@+id/delete_icon"
        android:src="@drawable/like_48px" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.5"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:minWidth="10dp"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"

        android:text="Wednesday, April 6, 2013 at 12:42 AM"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="#FF3855" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.2"
        android:background="#555" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_toEndOf="@+id/delete_icon"
        android:layout_toRightOf="@+id/delete_icon"
        android:alpha="0.7"
        android:drawableEnd="@drawable/arrow1"
        android:drawableRight="@drawable/arrow1"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:singleLine="true"
        android:text="@string/string_dummy_text"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:typeface="serif" />
    <!--<ImageView
        android:id="@+id/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/del_trans"
        android:layout_marginTop="6dp"
        android:tint="#009DC4"
        android:visibility="gone"
        android:contentDescription="@string/del" />-->
    <TextView
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
        android:layout_toEndOf="@+id/setToFav"
        android:layout_toRightOf="@+id/setToFav"
        android:alpha="0.7"
        android:gravity="center_vertical"
        android:lines="2"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"

        android:text="@string/string_dummy_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="serif" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text6"
        android:layout_alignStart="@+id/text6"
        android:layout_below="@+id/text6"
        android:alpha="0.7"
        android:drawableEnd="@drawable/completed_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/completed_icon"
        android:gravity="end"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:text="@string/string_dummy_time_text"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textColor="#FF9980"
        android:textStyle="bold"
        android:typeface="serif" />


</RelativeLayout>